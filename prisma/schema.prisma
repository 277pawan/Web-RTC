generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum Values are here ------

enum UserRole {
  user
  admin
}

// our models are defined here ï…µ
// ---- User Model

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  role      UserRole    @default(user)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Authtoken Authtoken[]
}

// ----- Auth Token table 

model Authtoken {
  id           Int       @id @default(autoincrement())
  accessToken  String    @unique
  refreshToken String?
  tokenType    String    @default("access")
  role         UserRole  @default(user)
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  expiresAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
